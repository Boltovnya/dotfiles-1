#
# bspwm hotkeys
#

super + alt + {shift + ,_}Escape
    {bspc quit 1,\
    bspc list_monitors > "$BSPWM_LAYOUT"; \
        bspc list_history > "$BSPWM_HISTORY"; \
        bspc quit}

super + q
    xdo close -cd

super + {w,shift + w}
    bspc {close,kill}

super + t
    bspc cycle_layout

super + {r,shift + r,u}
    bspc rotate {clockwise,counter_clockwise,full_cycle}

super + {backslash,shift + backslash}
    bspc flip {vertical,horizontal}

super + b
    bspc balance

super + {s,f,x,z}
    bspc toggle_{floating,fullscreen,locked,visibility}

super + {grave,Tab}
    bspc {alternate,alternate_desktop}

super + {_,shift + }{h,j,k,l}
    bspc {focus,shift} {left,down,up,right}

super + {shift + ,_}apostrophe
    bspc swap{_, --keep-focus }

super + {m,Return,shift + Return}
    cur=$(xdo id); \
    wid=$(bspc biggest); \
    [ -n "$wid" -a "$cur" != "$wid" ] && xdo activate $wid{_, \
        && bspc swap, \
        && bspc swap --keep-focus }

super + {_,shift + }g
    toggle{panel,thm}

super + {o,i}
    bspc nearest {older,newer}

super + {d,shift + d}
    bspc cycle {next,prev} --skip-floating

super + {_,shift + }{a,v,e}
    bspc cycle {next,prev} {--skip-tiled,--skip-class-equal,--skip-class-differ}

super + {comma,period}
    bspc circulate {backward,forward}

super + {c,shift + c}
    bspc cycle {next,prev}

super + bracket{left,right}
    bspc cycle_desktop {prev,next}

super + ctrl + bracket{left,right}
    bspc cycle_desktop {prev,next} --skip-free

super + alt + bracket{left,right}
    bspc cycle_desktop {prev,next} --skip-occupied

super + ctrl + {h,j,k,l}
    bspc presel {left,down,up,right}

super + ctrl + shift + {h,j,k,l}
    bspc presel {left 0.33,down 0.66,up 0.33,right 0.66}

super + ctrl + {_,shift + }space
    bspc cancel{_, --all }

super + alt + {h,j,k,l}
    bspc push {left,down,up,right}

super + alt + shift + {h,j,k,l}
    bspc pull {right,up,down,left}

super + alt + control + {h,j,k,l} ; {0-9}
    bspc fence_ratio {left,down,up,right} 0.{0-9}

super + alt + ctrl + {1-9,0}
    bspc set window_gap {0,3,6,9,15,24,39,63,102,165}

super + ctrl + {1-9}
    bspc ratio 0.{1-9}

super + {_,shift + }{1-9,0}
    bspc {use,send_to} {One,Two,Three,Four,Five,Six,Seven,Eight,Nine,Ten}

super + shift + bracket{left,right}
    bspc drop_to {prev,next}

super + alt + shift + bracket{left,right}
    bspc drop_to {prev,next} --follow

:button1
    bspc grab_pointer focus
super + button{1-3}
    bspc grab_pointer {move,resize_side,resize_corner}

super + !button{1-3}
    bspc track_pointer %i %i

super + @button{1-3}
    bspc ungrab_pointer

#
# wm independent hotkeys
#

super + Escape
    pkill -USR1 -x sxhkd

super + ctrl + {slash,shift + slash}
    {terminal -cd "$HOME",terminal}

super + space
    dmenu_launch

super + ctrl + {comma,shift + comma,period}
    focus_or_run {dwb,dwb_restore,mutt}

super + {semicolon,shift + semicolon}
    glean_{primary,clipboard}

super + ctrl + {c,shift + c}
    focus_or_run {bspwm,sxhkd}_config

{_,shift + ,super + }XF86MonBrightness{Down,Up}
    bright {-1,-10,min,+1,+10,max}

XF86AudioMute
    volume toggle

{_,shift + }XF86Audio{Lower,Raise}Volume
    volume {_,strong_}{lower,raise}

super + alt + {0-9}
    mpc -q seek {0-9}0%

XF86Audio{Prev,Next}
    mpc -q {prev,next}

XF86AudioPlay
    mpc -q toggle

super + ctrl + XF86AudioPlay
    mpc load radios

super + XF86Audio{Prev,Next}
    mpc seek {-1,+1}

super + {XF86AudioPlay,shift + XF86AudioPlay}
    {focus_or_run ncmpcpp,copy_mpd_title}

super + ctrl + p
    pwgen -nc | tr -d '\n' | xsel -bi

super + {equal,shift + equal}
    {mosaic "$XDG_DOWNLOAD_DIR",sxiv -dbt "$XDG_DOWNLOAD_DIR/"dl*_*/*}

super + ctrl + {a,shift + a,t,i}
    focus_or_run {accounts,boards,top,notes}

super + ctrl + g
    pickcolor

super + {XF86LaunchA,shift + @XF86LaunchA}
    scrot {-e,-s -e} 'image_viewer $f'

super + XF86KbdBrightness{Down,Up}
    {launchpanel,killpanel}

{shift,super} + XF86Eject
    {wodim -eject,dpms_standby}

super + {alt,ctrl,alt + ctrl} + XF86Eject
    sudo systemctl {suspend,reboot,poweroff}

# vim: set ft=sxhkdrc:
