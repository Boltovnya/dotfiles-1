#
# bspwm hotkeys
#

# "bspc quit"
#     Mod4 + Alt + Escape

# "bspc close"
#     Mod4 + w

# "bspc layout tiled"
#     Mod4 + t

# "bspc layout monocle"
#     Mod4 + m

# "bspc rotate clockwise"
#     Mod4 + r

# "bspc rotate counter_clockwise"
#     Mod4 + Shift + r

# "bspc alternate"
#     Mod4 + Tab

# "bspc focus left"
#     Mod4 + h

# "bspc focus right"
#     Mod4 + l

# "bspc focus up"
#     Mod4 + k

# "bspc focus down"
#     Mod4 + j

# "bspc cycle next"
#     Mod4 + c

# "bspc cycle prev"
#     Mod4 + Shift + c

# "bspc presel left"
#     Mod4 + Control + h

# "bspc presel right"
#     Mod4 + Control + l

# "bspc presel up"
#     Mod4 + Control + k

# "bspc presel down"
#     Mod4 + Control + j

# "bspc push left"
#     Mod4 + Alt + h

# "bspc push right"
#     Mod4 + Alt + l

# "bspc push up"
#     Mod4 + Alt + k

# "bspc push down"
#     Mod4 + Alt + j

# "bspc pull left"
#     Mod4 + Alt + Shift + l

# "bspc pull right"
#     Mod4 + Alt + Shift + h

# "bspc pull up"
#     Mod4 + Alt + Shift + j

# "bspc pull down"
#     Mod4 + Alt + Shift + k

# "bspc use One"
#     Mod4 + 1

# "bspc use Two"
#     Mod4 + 2

# "bspc use Three"
#     Mod4 + 3

# "bspc use Four"
#     Mod4 + 4

# "bspc use Five"
#     Mod4 + 5

# "bspc use Six"
#     Mod4 + 6

# "bspc use Seven"
#     Mod4 + 7

# "bspc use Eight"
#     Mod4 + 8

# "bspc use Nine"
#     Mod4 + 9

# "bspc use Ten"
#     Mod4 + 0

# "bspc send_to One"
#     Mod4 + Shift + 1

# "bspc send_to Two"
#     Mod4 + Shift + 2

# "bspc send_to Three"
#     Mod4 + Shift + 3

# "bspc send_to Four"
#     Mod4 + Shift + 4

# "bspc send_to Five"
#     Mod4 + Shift + 5

# "bspc send_to Six"
#     Mod4 + Shift + 6

