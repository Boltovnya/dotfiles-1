    Mod4 + Control + Shift + a

"focus_or_run htop"
    Mod4 + Control + t

"focus_or_run notes"
    Mod4 + Control + i

"focus_or_run xlog"
    Mod4 + Control + x

"dvol status"
    XF86LaunchB

"dbright status"
    Shift + XF86LaunchB

"dbatt status"
    Mod4 + b

"dbright -1"
    XF86MonBrightnessDown

"dbright -1"
    XF86MonBrightnessDown

