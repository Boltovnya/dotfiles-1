# vim: set ft=conf:

map F follow
map f toggle_fullscreen
map q quit
map Q quit
map <S-Space> scroll full-up
map <A-1> set "pages-per-row 1"
map <A-2> set "pages-per-row 2"
map <A-b> set "page-padding 3"
map <A-B> set "page-padding 0"
map e rotate rotate-ccw

set page-padding 0
set first-page-column 2
set font sans-serif
set render-loading false
set window-title-basename true
set adjust-open "width"

set zoom-min 1
set zoom-max 5000

set default-bg '#FFFFEF'
set default-fg '#71757F'
set inputbar-bg '#EAE5D6'
set inputbar-fg '#71757F'
set statusbar-bg '#EAE5D6'
set statusbar-fg '#71757F'
set recolor-darkcolor '#71757F'
set recolor-lightcolor '#FDF6E7'
set highlight-color '#FFFF00'
set highlight-active-color '#00FFFF'
set highlight-transparency 0.33
