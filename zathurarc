map F follow
map f toggle_fullscreen
map q quit
map Q quit
map <S-Space> scroll full-up
map <A-1> set "pages-per-row 1"
map <A-2> set "pages-per-row 2"

set font terminus
set render-loading false
set page-padding   0
set adjust-open    "width"
set zoom-min       1
set zoom-max       5000

set default-bg         '#303030'
set default-fg         '#A8A8A8'
set inputbar-bg        '#303030'
set inputbar-fg        '#A8A8A8'
set statusbar-bg       '#303030'
set statusbar-fg       '#A8A8A8'
set recolor-darkcolor  '#5C656D'
set recolor-lightcolor '#FAF0E6'

