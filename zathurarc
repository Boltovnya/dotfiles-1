map F follow
map f toggle_fullscreen
map q quit
map Q quit
map <S-Space> scroll full-up
map <A-1> set "pages-per-row 1"
map <A-2> set "pages-per-row 2"
map <A-3> set "page-padding 3"
map <A-4> set "page-padding 0"
map e rotate rotate-ccw

set font sans-serif
set render-loading false
set page-padding   0
set adjust-open    "width"
set zoom-min       1
set zoom-max       5000

set default-bg         '#32312E'
set default-fg         '#A6A7AA'
set inputbar-bg        '#32312E'
set inputbar-fg        '#A6A7AA'
set statusbar-bg       '#32312E'
set statusbar-fg       '#A6A7AA'
set recolor-darkcolor  '#69717A'
set recolor-lightcolor '#FAF0E6'
set highlight-color        '#FFFF00'
set highlight-active-color '#00FFFF'
set highlight-transparency 0.33

