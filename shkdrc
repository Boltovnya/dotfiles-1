#
# wm independent hotkeys
#

meta + ctrl + slash
    urxvtc

meta + ctrl + shift + slash
    urxvtc -cd "$HOME/incoming"

meta + space
    dmenu_launch

meta + ctrl + comma
    focus_or_run dwb

meta + ctrl + shift + comma
    focus_or_run dwb_restore

meta + ctrl + dot
    focus_or_run mutt

meta + ctrl + shift + dot
    focus_or_run slrn

meta + apostrophe
    lasso

meta + shift + apostrophe
    small_lasso

meta + semicolon
    glean_primary

meta + shift + semicolon
    glean_clipboard

meta + ctrl + c
    focus_or_run bspwm_config

meta + shift + ctrl + c
    focus_or_run xbindkeys_config

brightnessdown
    dbright -1

brightnessdown
    dbright -1

brightnessup
    dbright +1

shift + brightnessdown
    dbright -10

shift + brightnessup
    dbright +10

# meta + brightnessdown
#     dbright min

# meta + brightnessup
#     dbright max

mute
    dvol toggle

volumedown
    dvol lower

volumeup
    dvol raise

shift + volumedown
    dvol strong_lower

shift + volumeup
    dvol strong_raise

meta + alt + 0
    mpc -q seek 0%

meta + alt + 1
    mpc -q seek 10%

meta + alt + 2
    mpc -q seek 20%

meta + alt + 3
    mpc -q seek 30%

meta + alt + 4
    mpc -q seek 40%

meta + alt + 5
    mpc -q seek 50%

meta + alt + 6
    mpc -q seek 60%

meta + alt + 7
    mpc -q seek 70%

meta + alt + 8
    mpc -q seek 80%

meta + alt + 9
    mpc -q seek 90%

previoussong
    mpc -q prev

nextsong
    mpc -q next

playpause
    mpc -q toggle

meta + ctrl + playpause
    mpc load radios

meta + previoussong
    mpc seek -1

meta + nextsong
    mpc seek +1

meta + playpause
    focus_or_run ncmpcpp

meta + shift + playpause
    copy_mpd_title

meta + insert
    copy_primary_to_clipboard

meta + shift + insert
    copy_clipboard_to_primary

meta + ctrl + p
    dash -c "printf $(pwgen -nc) | xsel -bi"

meta + equal
    mosaic "$HOME/incoming"

meta + shift + equal
    mosaic "$HOME/image"

