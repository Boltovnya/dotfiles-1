    dvol status

shift + dashboard
    dbright status

meta + b
    dbatt status

meta + ctrl + g
    pickcolor

meta + scale
    scrot

meta + shift + scale
    scrot -s

kbdillumdown
    togglethm dark

kbdillumup
    togglethm light

meta + kbdillumdown
    updatethm

meta + kbdillumup
    reloadpanel

shift + ejectcd
    wodim -eject

meta + ejectcd
    dpms_standby

meta + alt + ejectcd
    sudo systemctl suspend

meta + ctrl + ejectcd
    sudo systemctl reboot

meta + alt + ctrl + ejectcd
    sudo systemctl poweroff

