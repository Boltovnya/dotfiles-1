#
# bspwm hotkeys
#

meta + alt + esc
    wm_restart

meta + alt + shift + esc
    bspc quit 1

meta + w
    bspc close

meta + shift + w
    bspc kill

meta + t
    bspc cycle_layout

meta + y
    bspc cycle_layout

meta + r
    bspc rotate clockwise

meta + shift + r
    bspc rotate counter_clockwise

meta + u
    bspc rotate full_cycle

meta + s
    bspc toggle_floating

meta + f
    bspc toggle_fullscreen

meta + x
    bspc toggle_locked

meta + z
    bspc toggle_visibility

meta + grave
    bspc alternate

meta + tab
    bspc alternate_desktop

meta + h
    bspc focus left

meta + l
    bspc focus right

meta + k
    bspc focus up

meta + j
    bspc focus down

meta + shift + h
    bspc shift left

meta + shift + l
    bspc shift right

meta + shift + k
    bspc shift up

meta + shift + j
    bspc shift down

meta + o
    bspc nearest older

meta + i
    bspc nearest newer

meta + d
    bspc cycle next --skip-floating

meta + shift + d
    bspc cycle prev --skip-floating

meta + a
    bspc cycle next --skip-tiled

meta + shift + a
    bspc cycle prev --skip-tiled

meta + n
    bspc cycle next --skip-class-equal

meta + p
    bspc cycle prev --skip-class-equal

meta + e
    bspc cycle next --skip-class-differ

meta + shift + e
    bspc cycle prev --skip-class-differ

meta + comma
    bspc circulate backward

meta + dot
    bspc circulate forward

meta + c
    bspc cycle next

meta + shift + c
    bspc cycle prev

meta + rightbracket
    bspc cycle_desktop next

meta + leftbracket
    bspc cycle_desktop prev

meta + ctrl + rightbracket
    bspc cycle_desktop next --skip-free

meta + ctrl + leftbracket
    bspc cycle_desktop prev --skip-free

